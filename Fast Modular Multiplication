// Fast Modular Multiplication (a * b % mod)
// Time Complexity: O(log b)
#include <bits/stdc++.h>
using namespace std;
#define int long long
const int mod = 1e9+7;

int fastMultiply(int a, int b) {
    int res = 0;
    a %= mod;
    while (b > 0) {
        if (b & 1) {
            res = (res + a) % mod;
        }
        a = (2 * a) % mod;
        b =b/2;
    }
    return res;
}

int32_t main() {
    int a, b;
    cin >> a >> b;
    cout << fastMultiply(a, b) << "\n";
}
